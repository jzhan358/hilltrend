<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="zdHessianProxyFactory" class="com.third.hilltrend.api.common.client.ZDHessianProxyFactory">
        <property name="channel" value="hilltrend"/>
    </bean>

    <bean id="healthFacadeService" class="com.third.hilltrend.api.common.client.ZDHessianProxyFactoryBean">
        <property name="serviceUrl" value="${hilltrend.remote.url}/healthFacadeService"/>
        <property name="serviceInterface" value="com.zdmoney.assets.api.facade.sys.IHealthFacadeService"/>
        <property name="proxyFactory" ref="zdHessianProxyFactory"/>
    </bean>

    <bean id="goodsFacadeService" class="com.third.hilltrend.api.common.client.ZDHessianProxyFactoryBean">
        <property name="serviceUrl" value="${hilltrend.remote.url}/goodsFacadeService"/>
        <property name="serviceInterface" value="com.third.hilltrend.api.facade.goods.IGoodsFacadeService"/>
        <property name="proxyFactory" ref="zdHessianProxyFactory"/>
    </bean>

    <bean id="scoreFacadeService" class="com.third.hilltrend.api.common.client.ZDHessianProxyFactoryBean">
        <property name="serviceUrl" value="${hilltrend.remote.url}/scoreFacadeService"/>
        <property name="serviceInterface" value="com.third.hilltrend.api.facade.score.IScoreFacadeService"/>
        <property name="proxyFactory" ref="zdHessianProxyFactory"/>
    </bean>

</beans>