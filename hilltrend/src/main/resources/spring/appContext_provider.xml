<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="/healthFacadeService" class="com.third.hilltrend.common.hession.ZDHessianServiceExporter">
        <property name="service" ref="healthFacadeService"/>
        <property name="serviceInterface" value="com.third.hilltrend.api.facade.sys.IHealthFacadeService"/>
    </bean>

    <bean name="/goodsFacadeService" class="com.third.hilltrend.common.hession.ZDHessianServiceExporter">
        <property name="service" ref="goodsFacadeService"/>
        <property name="serviceInterface" value="com.third.hilltrend.api.facade.goods.IGoodsFacadeService"/>
    </bean>

    <bean name="/scoreFacadeService" class="com.third.hilltrend.common.hession.ZDHessianServiceExporter">
        <property name="service" ref="scoreFacadeService"/>
        <property name="serviceInterface" value="com.third.hilltrend.api.facade.score.IScoreFacadeService"/>
    </bean>

</beans>